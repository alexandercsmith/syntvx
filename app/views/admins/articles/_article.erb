<div id="art-<%= article.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to article.name.truncate(50), article_path(article) %>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to admins_edit_article_path(article), class: 'edit' do %>
      <%= fa_icon "pencil" %>
    <% end %>
    <%= link_to admins_article_info_path(article), class: 'info' do %>
      <%= fa_icon "info" %>
    <% end %>
    <%= link_to publish_article_path(article), class: "#{article.published_check}", method: :put do %>
      <%= fa_icon "check" %>
    <% end %>
    <%= link_to feature_article_path(article), class: "#{article.featured_check}", method: :put do %>
      <%= fa_icon "star" %>
    <% end %>
    <%= link_to delete_article_path(article), class: "#{article.deletion_link}", method: :put do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
</div>
