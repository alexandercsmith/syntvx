<div id="art-<%= article.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to article_path(article) do %>
      <span class="<%= article.published_check %>"><%= article.id.to_s %></span><%= article.name %>
    <% end %>
    <p><%= article.description %></p>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to article.published_link, publish_article_path(article), method: :put %>
    <%= link_to article.featured_link, feature_article_path(article), method: :put %>
    <%= link_to article.deletion_link, delete_article_path(article), method: :put %>
  </div>
</div>
