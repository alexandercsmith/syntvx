<%= form_tag(admins_articles_path, method: :get, class: 'admin-search') do %>
  <div class="admin-search-input">
    <%= text_field_tag :term, params[:term], placeholder: 'Search Articles...' %>
    <div class="admin-filter-options">
      <%= radio_button_tag :filter, 'all', filter_check('all', params[:filter]) %>
      <span class="all">All</span>
      <%= radio_button_tag :filter, 'published', filter_check('published', params[:filter]) %>
      <span class="published">Published</span>
      <%= radio_button_tag :filter, 'unpublished', filter_check('unpublished', params[:filter]) %>
      <span>Drafts</span>
      <%= radio_button_tag :filter, 'featured', filter_check('featured', params[:filter]) %>
      <span class="featured">Featured</span>
    </div>
    <%= submit_tag 'Search' %>
  </div>
<% end %>
