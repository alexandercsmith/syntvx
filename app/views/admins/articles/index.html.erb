<div id="admin-<%= controller_name %>-<%= action_name %>" class="admin-page">

  <div class="admin-head">
    <h1><%= controller_name.upcase %></h1>
    <div class="admin-head-options">
      <% if action_name == 'index' %>
        <%= link_to 'TRASH', admins_articles_trash_path %>
      <% else %>
        <%= link_to 'ARTICLES', admins_articles_path %>
      <% end %>
      <%= link_to 'NEW', admins_new_article_path %>
    </div>
  </div>

  <%= render partial: 'admins/articles/search' if action_name == 'index' %>

  <div class="admin-items">
    <%= will_paginate @articles %>
    <%= render @articles %>
    <%= will_paginate @articles %>
  </div>

</div>
