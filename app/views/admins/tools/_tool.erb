<div id="tool-<%= tool.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to tool_path(tool) do %>
      <span class="<%= tool.published_check %>"><%= tool.id.to_s %></span><%= tool.name %>
    <% end %>
    <p><%= tool.description %></p>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to tool.published_link, publish_tool_path(tool), method: :put %>
    <%= link_to tool.featured_link, feature_tool_path(tool), method: :put %>
    <%= link_to tool.deletion_link, delete_tool_path(tool), method: :put %>
  </div>
</div>
