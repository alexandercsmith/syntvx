<div id="tool-<%= tool.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to tool.name.truncate(25), resource_path(tool) %>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to edit_tool_path(tool), class: 'edit' do %>
      <%= fa_icon "pencil" %>
    <% end %>
    <%= link_to tool_path(tool), class: 'info' do %>
      <%= fa_icon "info" %>
    <% end %>
    <%= link_to publish_tool_path(tool), class: "#{tool.published_check}", method: :put do %>
      <%= fa_icon "check" %>
    <% end %>
    <%= link_to feature_tool_path(tool), class: "#{tool.featured_check}", method: :put do %>
      <%= fa_icon "star" %>
    <% end %>
    <%= link_to delete_tool_path(tool), class: "#{tool.deletion_link}", method: :put do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
</div>
