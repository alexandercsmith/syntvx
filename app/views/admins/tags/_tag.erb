<div id="tag-<%= tag.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to tag_path(tag) do %>
      <span class="<%= tag.approval_check %>"><%= tag.id.to_s %></span><%= tag.name %>
    <% end %>
    <p><%= tag.description %></p>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to tag.approval_link, approve_tag_path(tag), method: :put %>
    <%= link_to tag.featured_link, feature_tag_path(tag), method: :put %>
    <%= link_to tag.deletion_link, delete_tag_path(tag), method: :put %>
  </div>
</div>
