<div id="admin-<%= controller_name %>-<%= action_name %>" class="admin-page">
  <div class="admin-head">
    <h1><%= controller_name.upcase %></h1>
    <div class="admin-head-options">
      <% if action_name == 'index' %>
        <%= link_to 'TRASH', admins_tags_trash_path %>
      <% else %>
        <%= link_to 'TAGS', admins_tags_path %>
      <% end %>
      <%= link_to 'NEW', admins_new_tag_path %>
    </div>
  </div>

  <%= render partial: 'admins/tags/search' if action_name == 'index' %>

  <div class="admin-items">
    <%= will_paginate @tags %>
    <%= render @tags %>
    <%= will_paginate @tags %>
  </div>
</div>
