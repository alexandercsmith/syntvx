<div id="cat-<%= category.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to category_path(category) do %>
      <span class="<%= category.approval_check %>"><%= category.id.to_s %></span><%= category.name %>
    <% end %>
    <p><%= category.description %></p>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to category.approval_link.capitalize, approve_category_path(category), method: :put %>
    <%= link_to category.featured_link.capitalize, feature_category_path(category), method: :put %>
    <%= link_to category.deletion_link.capitalize, delete_category_path(category), method: :put %>
  </div>
</div>
