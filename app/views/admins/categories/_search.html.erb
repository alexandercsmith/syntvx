<%= form_tag(admins_categories_path, method: :get, class: 'admin-search') do %>
  <div class="admin-search-input">
    <%= text_field_tag :term, params[:term], placeholder: 'Search Categories...' %>
    <div class="admin-filter-options">
      <%= check_box_tag :approved, value: 'true' %>
      <span class="approved">Approved</span>
      <%= check_box_tag :approved, value: 'false' %>
      <span>Drafts</span>
      <%= check_box_tag :featured, value: 'true' %>
      <span class="featured">Featured</span>
    </div>
    <%= submit_tag 'Search' %>
  </div>
<% end %>
