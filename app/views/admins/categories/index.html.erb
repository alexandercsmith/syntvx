<div id="admin-<%= controller_name %>-<%= action_name %>" class="admin-page">
  <div class="admin-head">
    <h1><%= controller_name.upcase %></h1>
    <div class="admin-head-options">
      <% if action_name == 'index' %>
        <%= link_to 'TRASH', admins_categories_trash_path %>
      <% else %>
        <%= link_to 'CATEGORIES', admins_categories_path %>
      <% end %>
      <%= link_to 'NEW', admins_new_category_path %>
    </div>
  </div>

  <%= render partial: 'admins/categories/search' if action_name == 'index' %>

  <div class="admin-items">
    <%= will_paginate @categories %>
    <%= render @categories %>
    <%= will_paginate @categories %>
  </div>
</div>
