<div id="lang-<%= language.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to language.name.truncate(25), language_path(language) %>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to language_path(language), class: 'info', method: :put do %>
      <%= fa_icon "info" %>
    <% end %>
    <%= link_to approve_language_path(language), class: "#{language.approval_check}", method: :put do %>
      <%= fa_icon "check" %>
    <% end %>
    <%= link_to feature_language_path(language), class: "#{language.featured_check}", method: :put do %>
      <%= fa_icon "star" %>
    <% end %>
    <%= link_to delete_language_path(language), class: "#{language.deletion_link}", method: :put do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
</div>
