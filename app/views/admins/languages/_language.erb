<div id="lang-<%= language.id %>" class="admin-item">
  <div class="admin-item-info xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-2 xs-col-1-1">
    <%= link_to language_path(language) do %>
      <span class="<%= language.approval_check %>"><%= language.id.to_s %></span><%= language.name %>
    <% end %>
    <p><%= language.description %></p>
  </div>

  <div class="admin-item-links xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-2 xs-col-1-1">
    <%= link_to language.approval_link, approve_language_path(language), method: :put %>
    <%= link_to language.featured_link, feature_language_path(language), method: :put %>
    <%= link_to language.deletion_link, delete_language_path(language), method: :put %>
  </div>
</div>
