<%= form_with(model: tool, local: true, class: 'form') do |form| %>
  <% if tool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

      <ul>
      <% tool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="field-label">
      <%= form.label :name %>
    </div>
    <div class="field-input">
      <%= form.text_field :name, placeholder: 'Tool Name' %>
    </div>
  </div>

  <% if action_name == 'edit' %>
    <div class="field">
      <div class="field-label">
        <%= form.label :slug %>
      </div>
      <div class="field-input">
        <%= form.text_field :slug, placeholder: 'Tool Slug' %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="field-label">
      <%= form.label :description %>
    </div>
    <div class="field-input">
      <%= form.text_field :description, placeholder: 'Tool Description' %>
    </div>
  </div>

  <div class="field">
    <div class="field-label">
      <%= form.label :website %>
    </div>
    <div class="field-input">
      <%= form.url_field :website, placeholder: 'Tool Website' %>
    </div>
  </div>

  <div class="field">
    <div class="field-label">
      <%= form.label :github %>
    </div>
    <div class="field-input">
      <%= form.url_field :github, placeholder: 'Tool Github' %>
    </div>
  </div>

  <div class="field">
    <div class="field-label">
      <%= form.label :languages %>
    </div>
    <div class="field-input">
      <% @languages.each do |language| %>
        <div class="field-checkbox">
          <% if @tool.languages.include?(language) %>
            <input type="checkbox" name="tool[language_ids][]" value="<%= language.id %>" checked="checked"/>
          <% else %>
            <input type="checkbox" name="tool[language_ids][]" value="<%= language.id %>"/>
          <% end %>
          <span><%= language.name %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="field">
    <div class="field-label">
      <%= form.label :categories %>
    </div>
    <div class="field-input">
      <% @categories.each do |category| %>
        <div class="field-checkbox">
          <% if @tool.categories.include?(category) %>
            <input type="checkbox" name="tool[category_ids][]" value="<%= category.id %>" checked="checked"/>
          <% else %>
            <input type="checkbox" name="tool[category_ids][]" value="<%= category.id %>"/>
          <% end %>
          <span><%= category.name %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit('Submit', data: { "disable-with": "Saving..." }) %>
  </div>
<% end %>
