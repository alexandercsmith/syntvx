<%= form_with(model: category, local: true, class: 'form') do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="field-label xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-1 xs-col-1-1">
      <%= form.label :name %>
    </div>
    <div class="field-input xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-1 xs-col-1-1">
      <%= form.text_field :name, placeholder: 'Category Name' %>
    </div>
  </div>

  <% if action_name == 'edit' %>
    <div class="field">
      <div class="field-label xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-1 xs-col-1-1">
        <%= form.label :slug %>
      </div>
      <div class="field-input xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-1 xs-col-1-1">
        <%= form.text_field :slug, placeholder: 'Category Slug' %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="field-label xl-col-1-4 lg-col-1-4 md-col-1-3 sm-col-1-1 xs-col-1-1">
      <%= form.label :description %>
    </div>
    <div class="field-input xl-col-3-4 lg-col-3-4 md-col-2-3 sm-col-1-1 xs-col-1-1">
      <%= form.text_field :description, placeholder: 'Category Description' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit('Submit', data: { "disable-with": "Saving..." }) %>
  </div>
<% end %>
