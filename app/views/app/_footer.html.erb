<div id="footer">
  <div class="container">
    <div class="footer-logo">
      <%= link_to root_path do %>
        <%= image_tag 'http://assets.syntvx.com/logo/logo-2x.png', alt: 'SYNTVX Logo' %>
        <span>S Y N T V X</span>
      <% end %>
    </div>

    <div class="footer-links">
      <%= link_to 'HOME', root_path %>
      <%= link_to 'DIRECTORY', directory_path %>
      <%= link_to 'BLOG', blog_path %>
    </div>

    <div class="footer-bottom">
      <div class="footer-socials">
        <%= render partial: 'app/socials' %>
      </div>
      <div class="footer-legal">
        <%= link_to 'Terms & Conditions', terms_path %>
        <%= link_to 'Privacy Policy', policy_path %>
      </div>
    </div>
  </div>
</div>
