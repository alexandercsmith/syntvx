<div id="footer">
  <div class="container">
    <div class="footer-logo">
      <%= link_to root_path do %>
        <%= image_tag 'http://assets.syntvx.com/logo/logo-2x.png', alt: 'SYNTVX Logo' %>
        <span>S Y N T V X</span>
      <% end %>
    </div>

    <div class="footer-links">
      <%= link_to 'HOME', root_path %>
      <%= link_to 'DIRECTORY', directory_path %>
      <%= link_to 'BLOG', blog_path %>
    </div>

    <div class="footer-bottom">
      <div class="footer-socials">
        <%= link_to "https://www.facebook.com/syntvx.code", target: '_blank' do %>
          <%= fa_icon 'facebook' %>
        <% end %>
        <%= link_to "https://twitter.com/_syntvx", target: '_blank' do %>
          <%= fa_icon 'twitter' %>
        <% end %>
        <%= link_to "https://www.instagram.com/syntvx/", target: '_blank' do %>
          <%= fa_icon 'instagram' %>
        <% end %>
      </div>
      <div class="footer-legal">
        <%= link_to 'Terms & Conditions', terms_path %>
        <%= link_to 'Privacy Policy', policy_path %>
      </div>
    </div>
  </div>
</div>
